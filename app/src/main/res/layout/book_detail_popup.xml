<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/spacing_medium"
    android:background="@drawable/book_view_background">

    <ImageView
        android:id="@+id/popupCoverImageView"
        android:layout_width="@dimen/book_popup_image_width"
        android:layout_height="@dimen/book_popup_image_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/popupTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_large"
        android:fontFamily="@font/cera_pro_medium"
        android:layout_marginBottom="@dimen/spacing_medium"/>

    <TextView
        android:id="@+id/popupAuthorTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/text_color_extra_light"
        android:fontFamily="@font/cera_pro_light"
        android:textSize="@dimen/text_size_medium"
        android:layout_marginBottom="@dimen/spacing_medium"/>

</LinearLayout>